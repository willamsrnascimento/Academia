@model Domain.Models.Exercicio

@{
    ViewData["Title"] = "Atualizar Exercícios";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="conteiner">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header">
                <h6 class="collection-header">Atualizar @Model.Nome</h6>
                <form asp-action="Edit">            
                    <div class="collection-item">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Nome" class="validate" id="Nome" />
                                <label for="Nome">Nome</label>
                                <span asp-validation-for="Nome" class="red-text darken-3"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <select asp-for="CategoriaExercicioId" class="browser-default" asp-items="ViewBag.CategoriaExercicioId"></select>
                                <span asp-validation-for="CategoriaExercicioId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item">
                            <input type="submit" value="Atualizar" class="btn btn-small blue darken-3" />&nbsp;
                            <a asp-action="Index" class="btn-small grey darken-1">voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
