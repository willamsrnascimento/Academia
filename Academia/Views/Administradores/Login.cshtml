@model Academia.ViewModels.AdministradorViewModel

@{
    ViewData["Title"] = "Faça seu login";
}

<h4>@ViewData["Title"]</h4>
<div class="conteiner">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header">
                <h6 class="collection-header">Efetue seu Login</h6>
                <form asp-action="Login">
                    <div class="collection-item">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Email" class="validate" id="Nome" />
                                <label for="Email">E-mail</label>
                                <span asp-validation-for="Email" class="red-text darken-3"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Senha" class="validate" id="Nome" />
                                <label for="Senha">Senha</label>
                                <span asp-validation-for="Senha" class="red-text darken-3"></span>
                            </div>
                        </div>
                        <div class="collection-item">
                            <input type="submit" value="Login" class="btn btn-small teal darken-2" />&nbsp;
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
